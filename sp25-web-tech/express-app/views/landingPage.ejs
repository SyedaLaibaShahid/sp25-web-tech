<div id="product" class="container py-4">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row g-3">
        <% topRated.forEach(product => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a
                href="/products/<%= product._id %>"
                class="text-decoration-none text-dark"
            >
                <div class="card h-100 shadow-sm rounded-4 p-2">
                    <img
                        src="img/products/<%= product.image %>"
                        class="card-img-top rounded-top-4"
                        alt="<%= product.name %>"
                    />
                    <div
                        class="card-body d-flex flex-column justify-content-between p-2"
                    >
                        <div>
                            <small class="text-muted"
                                ><%= product.brand %></small
                            >
                            <h6
                                class="card-title mt-1 mb-2"
                                style="font-size: 0.9rem"
                            >
                                <%= product.name %>
                            </h6>
                            <div class="mb-2">
                                <% for (let i = 0; i < 5; i++) { %> <% if (i <
                                product.rating) { %>
                                <i
                                    class="fas fa-star text-warning"
                                    style="font-size: 0.75rem"
                                ></i>
                                <% } else { %>
                                <i
                                    class="far fa-star text-warning"
                                    style="font-size: 0.75rem"
                                ></i>
                                <% } %> <% } %>
                            </div>
                        </div>
                        <div
                            class="d-flex justify-content-between align-items-center mt-auto"
                        >
                            <span
                                class="text-primary fw-semibold"
                                style="font-size: 0.9rem"
                                >$<%= product.price %></span
                            >
                            <button
                                class="btn btn-outline-success d-flex align-items-center justify-content-center rounded-circle p-0"
                                style="width: 36px; height: 36px"
                            >
                                <i
                                    class="fas fa-cart-plus"
                                    style="font-size: 0.9rem"
                                ></i>
                            </button>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <% }) %>
    </div>
</div>

