<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Checkout Page</title>
        <link rel="stylesheet" href="/css/checkout.css" />
        <script src="/scripts/Checkout.js"></script>
    </head>
    <body>
        <h1>Checkout</h1>
        <form id="checkoutForm" onsubmit="return validateForm()">
            <!-- Full Name -->
            <label for="fullName">Full Name</label>
            <input
                type="text"
                placeholder="Enter Full Name"
                id="fullName"
                required
                pattern="[A-Za-z\s]+"
                title="Only alphabets are allowed"
            />
            <div class="error" id="fullNameError"></div>

            <!-- Email -->
            <label for="email">Email</label>
            <input
                type="email"
                placeholder="example@gmail.com"
                id="email"
                required
            />
            <div class="error" id="emailError"></div>

            <!-- Phone Number -->
            <label for="phone">Phone Number</label>
            <input
                type="text"
                placeholder="+92 111 1111111"
                id="phone"
                required
                pattern="^\d{10}$"
                title="Phone number must be 10 digits"
            />
            <div class="error" id="phoneError"></div>

            <!-- Address -->
            <label for="address">Address</label>
            <input
                type="text"
                placeholder="Enter Address"
                id="address"
                required
            />
            <div class="error" id="addressError"></div>

            <!-- Credit Card Number -->
            <label for="creditCard">Credit Card Number</label>
            <input
                type="text"
                placeholder="XXXX XXXX XXXX"
                id="creditCard"
                required
                pattern="^\d{16}$"
                title="Card must be 16 digits"
            />
            <div class="error" id="creditCardError"></div>

            <!-- Expiry Date -->
            <label for="expiryDate">Expiry Date</label>
            <input type="month" id="expiryDate" required />
            <div class="error" id="expiryDateError"></div>

            <!-- CVV -->
            <label for="cvv">CVV</label>
            <input
                type="text"
                placeholder="XXX"
                id="cvv"
                required
                pattern="^\d{3}$"
                title="CVV must be 3 digits"
            />
            <div class="error" id="cvvError"></div>

            <button type="submit">Submit</button>
        </form>
    </body>
</html>
